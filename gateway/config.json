{
  "mcp": {
    "servers": {
      "memory": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-memory"
        ]
      },
      "linear": {
        "command": "node",
        "args": [
        "./linear-context-server-ts/build/server.js"
        ],
        "env": {
          "LINEAR_API_KEY": "your_key_here"
        }
      },
      "github": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-github"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "your_key_here"
        }
      }
    }
  }
}